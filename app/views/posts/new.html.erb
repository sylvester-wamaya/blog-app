<div>
<h2>Create a new post</h2>
<%= form_with model: @post, url:user_posts_path(current_user), html: {class: 'form-control'}, local: true do |f|%>
<div>
<%=f.text_field :title, placeholder: "Title"%>
</div>
<div>
<%=f.text_area :text, placeholder: "Start writing your post..."%>
</div>
<div>
<%=f.submit "Submit"%>
</div>
<%end%>
<button><a href="/users/<%=current_user.id%>/posts"> Back</a></button>
</div>